



<div class="row shadow-sm mb-4 mt-4 p-3">
  
  <%= form_with class: "row" do |form|  %>

      <div class="col">
        <%= form.text_field :matricula,  class: "form-control" , placeholder: "Pesquise por um código de matrícula" %>
      </div>

      <div class="col">
        <%= form.submit "pesquisar", class:"text-uppercase btn btn-primary" %>
      </div>

  <% end %>

</div>


<div class="row shadow-sm row">
  
  <div class="col-sm p-0">
    <div class="border-start border-4 border-warning p-3 rounded">
      <small>Total de Matrículas:</small>
      <span class="text-warning"><strong><%= @total_matriculas%></strong> </span>
    </div>
  </div>

   <div class="col-sm p-0">
     <div class="border-start border-4 border-warning p-3 rounded">
      <small>Total de Disciplinas:</small>
      <span class="text-warning "><strong><%= @total_disciplinas%> </strong></span>
    </div>
  </div>

  <div class="col-sm p-0">
    <div class="border-start border-4 border-warning p-3 rounded">
      <small>Total de Cursos:</small>
      <span class="text-warning "><strong><%= @total_cursos%> </strong></span>
    </div>
  </div>

  <div class="col-sm p-0">
    <div class="border-start border-4 border-warning p-3 rounded">
      <small>Total de Notas:</small>
       <span class="text-warning "><strong><%= @total_notas%> </strong></span>
    </div>
  </div>

   <div class="col-sm p-0">
    <div class="border-start border-4 border-warning p-3 rounded">
      <small>Total de Semestres:</small>
       <span class="text-warning "><strong><%= @total_semestres%> </strong></span>
    </div>
  </div>



</div>



<div class="row mt-3 shadow-sm">
  <h6 class="text-center p-3 border-bottom"> Lista de alunos por código de matrícula</h6>
  <table class="table table-striped table-sm w-100">
    <thead>
      <tr>
        <th scope="col">Matrícula</th>
        <th scope="col">Código da Disciplina</th>
        <th scope="col">Código do Curso</th>
        <th scope="col">Nota</th>
        <th scope="col">Carga Horária</th>
        <th scope="col">Ano Semestre</th>
        
      </tr>
    </thead>
    <tbody>
      
      <% if @alunos.present? %>
          <% @alunos.each do |aluno| %>
          <tr>
              <td scope="row">
                  <a  class="btn btn-outline-primary"
                      href="/alunos/<%= aluno['MATRICULA'].to_i %>" 
                  >
                      <%= aluno['MATRICULA'] %>      
                  </a>
              </td>
              <td class="text-light-emphasis"><%= aluno['COD_DISCIPLINA'] %></td>
              <td>
                <a  
                  class="btn btn-outline-primary w-50"
                  href="/cursos/<%= aluno['COD_CURSO'] %>" 
                >
                  <%= aluno['COD_CURSO'] %>      
                </a>
              </td>
              <td class="text-light-emphasis"><%= aluno['NOTA'] %></td>
              <td class="text-light-emphasis"><%= aluno['CARGA_HORARIA'] %></td>
              <td class="text-light-emphasis"><%= aluno['ANO_SEMESTRE'] %></td>
              <td></td>
              
          </tr>
          <% end %>
      <% end %>

    </tbody>
  </table>
</div>